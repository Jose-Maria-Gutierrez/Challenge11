@model Vehiculo

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h2>Editar Vehiculo</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <form method="post" asp-action="Editar">
                <input type="hidden" asp-for="id" />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="marca" class="control-label"></label>
                    <input asp-for="marca" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="modelo" class="control-label"></label>
                    <input asp-for="modelo" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="anio" class="control-label"></label>
                    <input asp-for="anio" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="kilometros" class="control-label"></label>
                    <input asp-for="kilometros" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="precio" class="control-label"></label>
                    <input asp-for="precio" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="editar vehiculo" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>